{
    "version": 2,
    "builds": [
        {
            "src": "backend/src/main.ts",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/next"
        }
    ],
    "routes": [
        {
            "src": "/api/auth/(.*)",
            "dest": "/frontend/api/auth/$1"
        },
        {
            "src": "/api/copilot/(.*)",
            "dest": "/frontend/api/copilot/$1"
        },
        {
            "src": "/api/(.*)",
            "dest": "/backend/src/main.ts"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/$1"
        }
    ]
}
